{
  "name": "docker-express-boilerplate",
  "version": "3.0.0",
  "description": "A boilerplate for Express.js applications with Docker, PostgreSQL, and a pre-built authentication system.",
  "main": "src/app/index.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon -L -r tsconfig-paths/register src/app/index.ts --watch \"src/**/*.{ts,js}\"",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "type-check": "tsc --noEmit",
    "lint:fix": "eslint --fix \"src/**/*.{ts,js}\"",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --collectCoverage",
    "docker:up": "docker-compose --profile dev up -d && yarn docker:shell",
    "docker:test:up": "docker-compose --profile test up -d && yarn docker:shell",
    "docker:down": "docker-compose --profile dev --profile test down",
    "docker:shell": "docker exec -it backend sh",
    "docker:build": "docker build . -t backend",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "sh -c 'yarn typeorm migration:generate -d src/infra/database/config/data-source.orm.ts src/infra/database/migrations/$0'",
    "migration:create": "sh -c 'yarn typeorm migration:create src/infra/database/migrations/$0'",
    "migration:revert": "yarn typeorm migration:revert -d src/infra/database/config/data-source.orm.ts",
    "migration:run": "yarn typeorm migration:run -d src/infra/database/config/data-source.orm.ts"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "connect-pg-simple": "10.0.0",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "express-session": "1.18.1",
    "helmet": "8.0.0",
    "inversify": "^6.0.2",
    "inversify-express-utils": "^6.4.6",
    "morgan": "1.10.0",
    "passport": "0.7.0",
    "passport-local": "1.0.0",
    "pg": "8.13.1",
    "reflect-metadata": "0.2.2",
    "tslib": "2.8.1",
    "typeorm": "0.3.20",
    "uuid": "^11.0.3",
    "zod": "^3.23.5"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "4.4.1",
    "@eslint/js": "9.17.0",
    "@stylistic/eslint-plugin": "2.12.1",
    "@types/bcryptjs": "2.4.6",
    "@types/connect-pg-simple": "7.0.3",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/express-session": "1.18.1",
    "@types/jest": "29.5.14",
    "@types/morgan": "1.9.9",
    "@types/node": "22.10.2",
    "@types/passport": "1.0.17",
    "@types/passport-local": "1.0.38",
    "@types/supertest": "6.0.2",
    "eslint": "9.17.0",
    "eslint-import-resolver-typescript": "3.7.0",
    "eslint-plugin-import": "2.31.0",
    "jest": "29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "3.1.9",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.2"
  },
  "resolutions": {
    "@types/express": "4.17.21"
  }
}
